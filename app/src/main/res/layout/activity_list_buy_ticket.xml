<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.mocinc.ListBuyTicket">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text=" Buy Ticket Concert"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/listTiket"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Ticket"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="78dp" />

    <Button
        android:id="@+id/registrasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrasi"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="78dp" />

 <Button
        android:id="@+id/payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="78dp" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="369dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="146dp">

        <CheckBox
            android:id="@+id/list1"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginRight="30sp"
            android:background="@android:color/holo_blue_bright"
            android:fontFamily="serif"
            android:text="Una in Prepettum, Januari 17 2017"
            android:textSize="16sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/list2"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginRight="30sp"
            android:layout_weight="0.00"
            android:background="@android:color/holo_red_light"
            android:fontFamily="serif"
            android:text="Alek Nagari 2017, February 01 2017"
            android:textSize="16sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/list3"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginRight="30sp"
            android:background="@android:color/holo_purple"
            android:fontFamily="serif"
            android:text="Pakcik 2017, Maret 16 2017"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
